rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para la colección de usuarios
    match /users/{userId} {
      // Permitir lectura si el ID del documento coincide con el ID del usuario autenticado
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permitir escritura si el ID del documento coincide con el ID del usuario autenticado
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir a los administradores acceder a todos los documentos (opcional)
      // allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reglas por defecto - denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 